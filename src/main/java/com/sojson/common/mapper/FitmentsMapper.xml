<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sojson.common.dao.FitmentMapper" >

  <sql id="Base_Column_List" >
    id,title,content,tag,star,style,remark,valid,addTime,url
  </sql>
  
  <sql id="limit_sql">
  	   <if test="page_sql != null and page_sql != ''">
      	${page_sql}
      </if>
  </sql>
  
  <sql id="where_all">
  	<where>
  	  <if test="findContent != null and findContent !='' " >
        and (
        LOWER(title) like CONCAT("%",#{findContent,jdbcType=VARCHAR},"%") or
        LOWER(tag) like CONCAT("%",#{findContent,jdbcType=VARCHAR},"%")
        )
      </if>
    </where>
  </sql>
  
  <select id="findAll" resultType="com.sojson.common.model.Fitment"  >
  	 select 
    <include refid="Base_Column_List" />
    from t_fitment 
    <include refid="where_all"/>
    <include refid="limit_sql" />
  </select>
  
  <select id="findCount" resultType="java.lang.Long" >
 	 select count(id) from  t_fitment
  	<include refid="where_all" />
  </select>
  
  <!-- 新增 -->
  <insert id="insertSelective" useGeneratedKeys="true" keyProperty="id" parameterType="com.sojson.common.model.Fitment" >
    insert into t_fitment
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="title != null" >
        title,
      </if>
      <if test="content != null" >
        content,
      </if>
      <if test="tag != null" >
        tag,
      </if>
      <if test="star != null" >
        star,
      </if>
      <if test="style != null" >
        style,
      </if>
      <if test="remark != null" >
        remark,
      </if>
      <if test="valid != null" >
        valid,
      </if>
      <if test="addTime != null" >
        addTime
      </if>
      <if test="url != null" >
        url,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=BIGINT},
      </if>
      <if test="title != null" >
        #{title,jdbcType=VARCHAR},
      </if>
      <if test="content != null" >
        #{content,jdbcType=VARCHAR},
      </if>
       <if test="url != null" >
        #{tag,jdbcType=VARCHAR},
      </if>
       <if test="star != null" >
        #{star,jdbcType=BIGINT},
      </if>
       <if test="style != null" >
        #{style,jdbcType=VARCHAR},
      </if>
       <if test="remark != null" >
        #{remark,jdbcType=VARCHAR},
      </if>
       <if test="valid != null" >
        #{valid,jdbcType=DECIMAL},
      </if>    
      <if test="addedTime != null" >
        #{addedTime,jdbcType=TIMESTAMP},
      </if>  
      <if test="url != null" >
        #{url,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert> 
</mapper>